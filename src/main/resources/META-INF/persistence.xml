<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="hibernate">
        <class>com.dy.hibernate.entity.Jobs</class>
        <properties>
            <property name="hibernate.connection.driver_class" value="oracle.jdbc.driver.OracleDriver" />
            <property name="hibernate.connection.url" value="jdbc:oracle:thin:@127.0.0.1:1521/xe" />
            <property name="hibernate.connection.username" value="HR" />
            <property name="hibernate.connection.password" value="1234" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.Oracle10gDialect" />
            <property name="hibernate.default_schema" value="HR" />
            <property name="show_sql" value="true" />
        </properties>
    </persistence-unit>
</persistence>